{
  "table": {
    "layout": {
      "density": "condensed",
      "rowHeight": "40px",
      "cellPadding": "12px",
      "headerSticky": true,
      "headerBackground": {
        "default": "#FFFFFF",
        "insideCard": "#F5F7FA"
      }
    },

    "borders": {
      "rowDivider": "#E4E7ED",
      "visibleSides": ["bottom"]
    },

    "typography": {
      "header": {
        "size": "14px",
        "weight": "500",
        "wrap": false
      },
      "bodyPrimary": {
        "size": "14px",
        "weight": "500",
        "color": "text.primary"
      },
      "bodySecondary": {
        "size": "14px",
        "weight": "400",
        "color": "text.secondary"
      }
    },

    "sorting": {
      "icons": {
        "visibleOnHoverOnly": true,
        "activeColor": "#73767A",
        "inactiveColor": "#C7C9CC"
      }
    },

    "rowStates": {
      "hover": {
        "background": "fill_light"
      },
      "selection": {
        "modes": ["checkbox", "rowHighlight"],
        "wholeRowClickable": true
      }
    },

    "editableCells": {
      "editingState": {
        "color": "#0F766E",
        "underline": "dotted"
      },
      "completedState": {
        "revertTo": ["text.primary", "text.secondary"]
      }
    },

    "actionsColumn": {
      "position": "right",
      "sticky": true,
      "maxActions": 3,
      "gap": "2px",
      "headerTitle": false,
      "hoverStyle": "ghost",
      "shadowWhenScrollable": true,
      "noShadowWhenStatic": true
    },

    "pagination": {
      "position": "bottom",
      "left": {
        "rowsPerPage": {
          "type": "dropdown",
          "options": [25, 50, 100],
          "selected": 25
        },
        "summaryText": {
          "format": "Showing 1â€“25 of 100",
          "textStyle": "secondary"
        }
      },
      "right": {
        "buttons": ["chevron-left", "1", "2", "3", "4", "5", "chevron-right"],
        "variant": "ghost"
      }
    },

    "dateFilterTabs": {
      "enabled": true,
      "style": "secondary",
      "variant": "outlined",
      "options": [
        "Today",
        "Yesterday",
        "Last 7 Days",
        "This Month",
        "Last Month",
        "This Year",
        "All"
      ],
      "optional": true
    },

    "settingsControl": {
      "icon": "cog",
      "position": "topRight",
      "floatsOverTableWhenScrollable": true
    },

    "emptyState": {
      "includes": ["iconOrIllustration", "message", "actionButton"],
      "alignment": "center"
    }
  },

  "tableFilters": {
    "layout": {
      "position": "aboveTable",
      "spacingFromTable": "16px",
      "cardPadding": {
        "leftRight": "16px",
        "topBottom": "12px"
      },
      "grid": {
        "maxColumns": 4,
        "defaultColumns": 3,
        "gap": "12px"
      }
    },

    "inputs": {
      "allowed": "any",
      "rules": [
        "All input fields must follow input.json tokens",
        "Inputs must align in a grid layout",
        "All inputs must use consistent height, padding, and radius",
        "Icons, dropdowns, calendars, and custom fields must follow input field rules",
        "Do not invent new input styles"
      ]
    },

    "actions": {
      "primary": {
        "variant": "primary",
        "label": "Search",
        "height": "32px"
      },
      "secondary": {
        "variant": "tertiary",
        "label": "Reset",
        "icon": "refresh",
        "height": "32px"
      },
      "alignment": "right",
      "gap": "spacing-md"
    },

    "rules": [
      "Filter section must be visually separated from the table",
      "Use a card container for filters",
      "Do not exceed 4 inputs per row on 1440px screens",
      "Inputs may wrap to a second row on smaller screens",
      "Buttons must follow button.json tokens"
    ]
  }
}
